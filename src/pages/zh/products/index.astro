---
import '@/styles/globals.css';
import '@/styles/pages/page.css';

import ProductsGrid from '@/components/products/products-grid.astro';
import { useTranslations } from '@/i18n/ui';
import PageLayout from '@/layouts/page-layout.astro';

const lang = 'zh';
const t = useTranslations(lang);

const pageTitle = "洁净室不锈钢家具目录 | ALDR EME";
const seoDescription = "浏览我们要品齐全的洁净室不锈钢家具目录。GMP就绪，医药级柜体、工作台和工作站。";
---

<PageLayout 
  pageTitle={pageTitle}
  seoDescription={seoDescription}
>
  <div class="w-full min-h-screen bg-zinc-50">
    {/* Hero Section */}
    <div class="relative bg-zinc-900 py-24 sm:py-32">
      <div class="absolute inset-0 overflow-hidden">
        <div class="absolute inset-0 opacity-20"></div>
        <div class="absolute inset-0 bg-linear-to-t from-zinc-900 to-transparent"></div>
      </div>
      <div class="relative container mx-auto px-4 text-center">
        <h1 class="text-4xl font-bold tracking-tight text-white sm:text-6xl">
          {t('precision-engineering') || '精密工程'}
        </h1>
        <p class="mt-6 text-lg leading-8 text-zinc-300 max-w-2xl mx-auto">
          {t('precision-engineering-desc') || '专为全球最关键环境设计的GMP就绪不锈钢家具和设备。'}
        </p>
      </div>
    </div>

    {/* Products Grid Section */}
    <div class="container mx-auto px-4 py-16 sm:py-24">
      <div class="text-center mb-12">
        <h2 class="text-3xl font-bold tracking-tight text-zinc-900 sm:text-4xl">{t('our-catalog') || '产品目录'}</h2>
        <p class="mt-4 text-zinc-500">
          {t('catalog-desc') || '浏览我们全面的医药级解决方案。'}
        </p>
      </div>
      {/* Note: ProductsGrid currently fetches *all* products internally. 
          Ideally we should pass products to it or it should be aware of locale. 
          For now, let's update ProductsGrid to accept a 'lang' prop or similar, 
          OR we just import it here. 
          Actually, ProductsGrid.astro fetches data internally. 
          I should verify ProductsGrid.astro to see if it supports localization.
          If not, I might need to refactor it or copy its logic here.
      */}
      <ProductsGrid lang={lang} />
    </div>
  </div>
</PageLayout>
